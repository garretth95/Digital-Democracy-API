@ hearing_transcript_by_id
param hid Integer
? select p.first, p.last, u.time, u.endTime, u.text from Hearing h, Video v, Utterance u left join Person p on u.pid = p.pid where h.hid = v.hid and v.vid = u.vid and h.hid = $$hid$$ order by u.uid

@ get_hearing_id
param date String
param state String
param committee_name String
? select h.hid,h.date,h.session_year from Hearing h, Committee c where h.date = $$date$$ and h.session_year = c.session_year and h.state = $$state$$ c.name = $$committee_name$$ and h.state = c.state limit 1

